<div class="row">
  <div class="col-3"></div>
  <div class="col-6">
<h1 class="text-light text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card">
    <div class="card-body">
      <div class="field">
      <%= f.label :image, 'プロフィール画像' %><br>
      <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="field">
      <%= f.label :nickname, 'ニックネーム' %><br>
      <%= f.text_field :nickname, class: "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :email, 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で設定してください。)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label :パスワードの確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-secondary rounded-pill"  %>
      </div>
    </div>
  </div>
<% end %>
<div class="btn btn-light rounded-pill">
  <%= render "devise/shared/links" %>
</div>
  </div>
</div>