      <h3>カテゴリ一覧・追加</h3>

      <%=form_with model: @category, url: admin_categories_path, method: :post do |f| %>
        <td><%= f.label :"カテゴリ名", class: "mr-3" %></td>
        <td><%= f.text_field :name, class: "mr-5" %></td>
        <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>
      <% end %>
          
     　 <th>カテゴリ</th>
       <% @categories.each do |category| %>
       
         <td><%= category.name %></td>
         <td><%= link_to "編集する", edit_admin_category_path(category.id), class: "btn-success" %></td>
       <%end%>