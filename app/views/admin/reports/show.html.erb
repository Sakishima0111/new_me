<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <h1 class="page-title text-light text-center">通報詳細</h3>
    <div class="card">
      <div class="card-body">
        <table class="table">
          <tbody>
            <tr>
              <td>通報ID</td>
              <td><%= link_to @report.id %></td>
            </tr>
            <tr>
              <td>会員名</td>
              <td><%= link_to @report.reported.nickname, edit_admin_user_path(@report.reported.id) %></td>
            </tr>
            <tr>
              <td>理由</td>
              <td><%= @report.reason_i18n %></td>
            </tr>
            <tr>
              <td>通報内容</td>
              <% if @comment.present? %>
                <td><%= @report.content_type.classify.constantize.find(@report.content_id).body %></td>
                <td><%= link_to "削除", admin_report_comment_path(@comment.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: '本当に削除しますか？' }  %></td>
              <% else %>
                コメントは削除されました
              <% end %>
            </tr>
            <tr>
              <td>通報者</td>
              <td><%= @report.reporter.nickname %></td>
            </tr>
            <tr>
              <td>対応ステータス</td>
              <td>
                <%= @report.status_i18n %>
                <%= form_with model:@report, url:admin_report_path(@report), method: :patch, local: true do |f| %>
                  <%= f.select :status, Report.statuses.keys.map { |k| [t("enums.report.status.#{k}"), k] } %>
                  <%= f.submit '更新' %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
