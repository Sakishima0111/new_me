  <div class="card shadow-sm mb-3" style="max-width: 290px; min-width: 290px;">
    <div class="card-header">
      <div class="row">
        <div class="col-2">
          <%= image_tag goal.user.get_profile_image, size: '30x30', style: 'border-radius: 50%' %>
        </div>
        <div class="col-5">
          <%= link_to goal.user.nickname %>
        </div>
        <div class="col-5 text-right goal-status">
          <%= goal.status_i18n %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%=link_to goal.title %></h5>
      <div class="card-text">
        limit: <%= l goal.deadline %>
        <div class="row">
          <p>
          <%= goal.content %>
          </p>
        </div>
        <div class="row">
          <div class="col-3">
            <i class="fa-regular fa-message"></i> <%= render "comments/counter", goal: goal, id: "comment_counter"  %>
          </div>
          <div class="col-6 text-right">
            <%= time_ago_in_words(goal.created_at) %>前
            <%= link_to "削除", admin_user_path(@user, goal_id: goal.id), class: "btn btn-danger btn-sm rounded-pill", method: :delete, data: {confirm: "管理者として削除しますか？"} %>
          </div>
        </div>
      </div>
    </div>
  </div>

