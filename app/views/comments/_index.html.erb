<% comments.each do |comment| %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <div class="card-title">
            <%= link_to user_path(comment.user), style: "text-decoration:none;" do %>
              <%= image_tag comment.user.image, size: "50x50", style: 'border-radius: 25%' %><br>
              <%= comment.user.nickname %>
            <% end %>
          </div>
        </div>
        <div class="col-7">
          <div class="card-text">
            <%= comment.body %>
          </div>
        </div>
        <div class="col-2">
          <%= time_ago_in_words(comment.created_at) %>Ââç
        </div>
        <div class="col-1">
          <% if comment.user == current_user %>
            <%= link_to goal_comment_path(comment.goal, comment), method: :delete, class: "btn btn-light rounded-pill float-end", remote: true do %>
              <i class="fa-solid fa-trash-can "></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="report-btn text-right ml-2" id="report-btn-<%= comment.id %>">
        <%= render "reports/report_btn", comment: comment %>
      </div>
    </div>
  </div>
<% end %>