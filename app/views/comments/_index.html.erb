<% goal.comments.each do |comment| %>
  <div class="card">
    <div class="card-body">
      <div class="card-title">
        <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.image, size: "50x50" %><br>
        <%= comment.user.nickname %>
        <% end %>
      </div>
      <div class="card-text">
        <%= comment.body %>
        <% if comment.user == current_user %>
          <%= link_to "削除", goal_comment_path(goal, comment), method: :delete, class: "btn btn-sm btn-danger float-end" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>