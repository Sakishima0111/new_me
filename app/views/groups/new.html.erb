<div class="row">
<h1 class="text-light text-center">グループの作成</h1>
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card">
      <div class="card-body">
        <%= form_with model: @group do |f| %>
          <% if @group.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <div id="error_explanation">
                <strong>以下は必須項目です</strong>
                <ul>
                  <% @group.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :name, "グループ名" %>
            <%= f.text_field :name, autofocus: true, class: "shadow-sm form-control" %>
          </div>

          <div class="field">
            <%= f.label :description, "グループの説明" %>
            <%= f.text_area :description, class: "shadow-sm form-control" %>
          </div>
          <br>
          <div class="actions text-center">
            <%= f.submit "作成する", class: "shadow btn btn-secondary rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
