<div class="container">
  <div class="col-md-9">
      <strong><%= @goal.title %></strong>
      <%= @goal.content %>
      <p>limit: <%= l @goal.deadline %></p>
      <%= @goal.reward %><br>
      <%= @goal.status_i18n %>
      <%= render "cheers/btn", goal: @goal %>
      <%= link_to "編集する", edit_goal_path(@goal.id), class: "btn btn-success" %>
      <%= link_to "削除する", goal_path(@goal.id), class: "btn btn-danger", method: :delete %>
  </div>
</div>