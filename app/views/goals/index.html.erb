<div class="row">
  <h3 class="text-light">タイトルで投稿を検索</h3>
  <form class="form-inline">
    <%= form_tag({controller:"goals",action:"index"}, method: :get) do %>
      <div class="input-group">
        <%= text_field_tag :search, {}, {class: 'form-control'} %>
        <%= submit_tag '検索する', class: "btn btn-light" %>
      </div>
    <% end %>
  </form>
  <h1 class="text-light text-center">Goals</h1>
  <%= render "categories/index", categories: @categories %>
</div>


<div class="card-deck">
  <% @goals.each do |goal| %>
    <%= render "users/goal", goal: goal %>
  <% end %>
</div>
