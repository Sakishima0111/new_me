<h1 class="text-light text-center">Edit Profile</h1>
    <%= form_with model: @user do |f| %>
       <div class="card">
         <div class="card-body">
            <label for="inputName">ニックネーム</label><br>
            <%= f.text_field :nickname, autofocus: true, id:"inputName", class: "form-control" %><br>
            <label for="formFile" class="form-label">プロフィールイメージ</label><br>
            <%= f.file_field :image, class: "form-control", type: "file", id: "formFile", accept: "image/*" %><br>
            <label for="inputBody">自己紹介</label><br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction",class: "form-control"%><br>
            <div class="text-center">
              <%= f.submit "ユーザー情報を更新する", class: "btn btn-secondary rounded-pill " %>
            </div>   
            <div class="text-right">
              <%= link_to "退会手続きをする", check_user_path, class:"btn btn-outline-danger rounded-pill" %>
            </div>
          </div>
        </div>      
    <% end %>
