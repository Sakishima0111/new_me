  <div class="card border-dark mb-3" style="max-width: 300px; min-width: 300px;">
    <div class="card-header">
      <div class="row">
        <div class="col-2">
          <%= image_tag goal.user.get_profile_image, size: '30x30', style: 'border-radius: 50%' %>
        </div>
        <div class="col-5">
          <%= goal.user.nickname%>
        </div>
        <div class="col-5 text-right goal-status">
          <%= goal.status_i18n %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%=link_to goal.title, goal_path(goal.id) %></h5>
      <div class="card-text">
        limit: <%= l goal.deadline %>
        <div class="row">
          <p>
          <%= goal.content %>
          </p>
        </div>
        <div class="row">
          <div class="col-3", id="cheer_btn<%= goal.id %>">
            <%= render "cheers/btn", goal: goal %>
          </div>
          <div class="col-3">
            <i class="fa-regular fa-message"></i> <%= goal.comments.count %>
          </div>
          <div class="col-6 text-right">
            <%= time_ago_in_words(goal.created_at) %>前
          </div>
        </div>
      </div>
    </div>
  </div>

