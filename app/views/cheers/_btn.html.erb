<% if goal.cheered_by?(current_user) %>
  <%= link_to goal_cheers_path(goal), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= goal.cheers.count %> 応援する
  <% end %>
<% else %>
  <%= link_to goal_cheers_path(goal), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= goal.cheers.count %> 応援する
  <% end %>
<% end %>
