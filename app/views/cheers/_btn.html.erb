<% if goal.cheered_by?(current_user) %>
  <%= link_to goal_cheers_path(goal), method: :delete do %>
    <i class="fa-solid fa-hands-clapping" aria-hidden="true" style="color: orange;"></i>
    <%= goal.cheers.count %> 
  <% end %>
<% else %>
  <%= link_to goal_cheers_path(goal), method: :post do %>
    <i class="fa-solid fa-hands-clapping" aria-hidden="true"></i>
    <%= goal.cheers.count %> 
  <% end %>
<% end %>
